<?xml version ="1.0"?>

<map proto="1.3.3">

<name>Harmony</name>
<version>1.0.0</version>

<Objective>Take the enemy's wool and place it in your wool monument.</objective>

<authors>
	<author>DropZone3777</author>
	<author>Guagadu</author>
	<author>C6H2_NO2_3CH3</author>
</authors>


<teams>
	<team color="aqua" max="12">Tundra Walkers</team>
	<team color="gold" max="12">Desert Raiders</team>
</teams>

<spawns>
	<spawn team="Desert Raiders" kit="dr">
		<point yaw="163">
			<cylinder base="-2,16,-54" height="0" radius="2"/>
		</point>
	</spawn>
	<spawn team="Tundra Walkers" kit="tw">
		<point yaw="270">
			<cylinder base="3,16,51" height="0" radius"2"/>
		</point>
	</spawn>
</spawns>

<kits>
	<kit name="dr">
		<item slot="0" name="Scimitar">stone sword</item>
		<item slot="1" name="Desert Slingshot">bow</item>
		<item slot="2" name="Sandstone Breaker" enchantment="durability:10" enchantment="dig_speed:3" enchantment="silk_touch:1">iron pickaxe</item>
		<item slot="3" name="Sand Excavator" enchantment="durability:10" enchantment="silk_touch:1">stone shovel</item>
		<item slot="4" name="Hardened Dune Sand" amount="16">hardened clay</item>
		<item slot="5" name="Sun Baked Wheat" amount="64">bread</item>
		<item slot="6" name="Edible Glory">golden apple</item>
		<item slot="8" amount="16">arrow</item>
		<helmet color="b85933" damage="-3000" name="Sand Raider Goggles">leather helmet</helmet>
		<chestplate color="b85933" damage="-3000" name="Desert Robes">leather chestplate</chestplate>
		<leggings damage="-3000" name="Desert Robes">chain leggings</leggings>
		<boots color="b85933" damage="-3000" name="Boots O' the Heat">leather boots</boots>
	</kit>
	<kit name="tw">
		<item slot="0" name="Longsword">stone sword</item>
		<item slot="1" name="Winterized Bow">bow</item>
		<item slot="2" name="Ice Remover" enchantment="durability:10" enchantment="dig_speed:3" enchantment="silk_touch:1">iron pickaxe</item>
		<item slot="3" name="Snow Shovel" enchantment="durability:10" enchantment="silk_touch:1">stone shovel</item>
		<item slot="4" name="Packed Tundra Dirt" amount="16">snow</item>
		<item slot="5" name="Frozen Fish" amount="64">cooked fish</item>
		<item slot="6" name="Edible Glory">golden apple</item>
		<item slot="7" amount="16">arrow</item>
		<helmet color="728c99" damage="-3000" name="Tundra Walker Cowl">leather hemet</helmet>
		<chestplate color="728c99" damage="-3000" name="Tundra Overcoat">leather chestplate</chestplate>
		<leggings damage="-3000" name="Tundra Overcoat">chain leggings</leggings>
		<boots color="728c99" damage="-3000" name="Frozen Snow Shoes">leather boots</boots>
	</kit>
</kits>

<toolrepair>
	<tool>stone sword</tool>
	<tool>bow</tool>
	<tool>iron pickaxe</tool>
	<tool>stone shovel</tool>
</toolrepair>

<itemremove>
	<item>leather helmet</item>
	<item>leather chestplate</item>
	<item>chain leggings</item>
	<item>leather boots</item>
	<item>snow</item>
	<item>hardened clay</item>
	<item>golden apple</item>
	<item>cooked fish</item>
	<item>bread</item>
	<item>bow</item>
	<item>soul sand</item>
	<item>packed ice</item>
	<item>snowball</item>
</itemremove>

<filters>
    <filter name="deny-icemelt">
        <not><all>
            <any>
                <filter name="allow-world" />
                <filter name="deny-all" />
            </any>
            <block>ice</block>
        </all></not>
    </filter>
</filters>

<killreward>
	<item>golden apple</item>
</killreward>

<regions>
	<union name="snow spawn">
		<circle center="0,15,-49" radius="11"/>
		</union>
	<union name="snow wool rooms">
		<circle name="blue island" center="18,0,-54" radius="21"/>
		<circle name="cyan island" center="-17,0,-54" radius="21"/>
	</union>
	<union name="desert spawn">
		<circle center="0,15,51" radius="11"/>
	</union>
	<union name="desert wool rooms">
		<circle name="red island" center="-17,0,54" radius="21"/>
		<circle name="orange island" center="18,0,55" radius="21"/>
	</union>
</regioins>

<maxbuildheight>35</maxbuildheight>

<wools>
	<wool team="dr" color="blue">
		<block location="1,11,52"/>
	</wool>
	<wool team="dr" color="cyan">
		<block location="-1,11 52"/>
	</wool>
	<wool team="tw" color="red">
		<block location="1,10,-51"/>
	</wool>
	<wool team="tw" color="orange">
		<block location="1,11,52"/>
	</wool>
</wools>
</map>
