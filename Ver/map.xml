<?xml version="1.0"?>
<map proto="1.3.5">
<name>Ver</name> 
<version>1.0.0</version> 
<objective>To win obtain 600 points of the Hill.</objective>
<authors>
    <author>rockymine</author>
    <author>Qixit</author>
</authors>
<teams>
   <team color="red" max="12" max-overfill="15">Red Team</team>
   <team color="blue" max="12" max-overfill="15">Blue Team</team>
</teams>
<kits>
    <kit name="spawn">
        <item slot="0">stone sword</item>
        <item slot="1">bow</item>
        <item slot="28" amount="16">arrow</item>
        <item slot="2" amount="16">baked potato</item>
        <chestplate>leather chestplate</chestplate>
        <potion duration="5" amplifier="25">heal</potion>
        <potion duration="5" amplifier="25">damage resistance</potion>
    </kit>
    <kit name="red" parents="spawn">
        <helmet color="ff0000" damage="-3000">leather helmet</helmet>
        <leggings color="ff0000" damage="-3000">gold leggings</leggings>
        <boots color="ff0000" damage="-3000">leather boots</boots>
    </kit>
    <kit name="blue" parents="spawn">
        <helmet color="0000ff" damage="-3000">leather helmet</helmet>
        <leggings color="0000ff" damage="-3000">gold leggings</leggings>
        <boots color="0000ff" damage="-3000">leather boots</boots>
    </kit>
</kits>
<spawns>
    <spawn team="red" kit="red" yaw="135">
        <block>131.5,6,-251.5</block>
    </spawn>
    <spawn team="blue" kit="blue" yaw="-45">
        <block>47.5,6,-261.5</block>
    </spawn>
    <default yaw="90">
        <block>131.5,18,-252.5</block>
    </default>
</spawns>
<king>
    <hill name="Field" capture-time="12s" points="1">
    <capture>
        <cuboid min="92,2,-260" max="86,5,-254"/>
    </capture>
    <progress>
        <cuboid min="92,2,-260" max="86,3,-254"/>
    </progress>
    <captured>
        <cuboid min="92,2,-260" max="86,6,-254"/>
    </captured>
    </hill>
</king>    
<score>
    <limit>600</limit>
    <king/>
</score>
<filters>
	<filter name="only-red">
		<not>
			<team>blue</team>
		</not>
	</filter>
	<filter name="only-blue">
		<not>
			<team>red</team>
		</not>
	</filter>
</filters>
<regions>
    <union name="spawns">
        <rectangle name="red-spawn" min="129.5,-256.5" max="129.5,-252.5"/>
        <rectangle name="blue-spawn" min="49.5,-258.5" max="49.5,-262.5"/>
    </union>
    <apply block="deny-blocks">
        <region name="spawns"/>
    </apply>
    <apply block="deny-all">
        <rectangle min="-oo,-oo" max="oo,oo"/>
    </apply>
    <apply enter="only-red">
        <cuboid min="129,6,-256.5" max="129,8,-252"/>
    </apply>
    <apply enter="only-blue">
        <cuboid min="49,6,-258" max="49,8,-262"/>
    </apply>
</regions>
<killreward>
    <item>gold nugget</item>
</killreward>
<itemremove>
    <item>baked potato</item>
    <item>gold chestplate</item>
    <item>chainmail boots</item>
    <item>leather helmet</item>
    <item>leather boots</item>
    <item>gold leggings</item>
</itemremove>
<itemkeep>
    <item>gold nugget</item>
</itemkeep>
<toolrepair>
    <item>stone sword</item>
    <item>bow</item>
</toolrepair>
<multitrade/>
</map>
