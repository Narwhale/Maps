<?xml version="1.0"?>
<!-- Unconfirmed features = team sizes, map length -->
<map proto="1.3.3">
<name>Sovy</name>
<version>1.0.0</version>
<objective>
  Attackers have 10 minutes to destroy the 3 monuments. Defenders must hold them off to win!
</objective>
<authors>
  <author>Avaleer</author>
</authors>
<contributors>
  <contributor contribution="XML">TheZaner</contributor>
</contributors>
<teams>
  <team color="lime" max="1">Attackers</team>
  <team color="dark red" max="1">Defenders</team>
</teams>
<destroyables name="Left Monument" materials="redstone block" completion="100%" show-progress="true">
  <destroyable owner="defenders">
   <cuboid min="46,16,26" max="45,14,25"/>
  </destroyable>
</destroyables>
<destroyables name="Right Monument" materials="redstone block" completion="100%" show-progress="true">
  <destroyable owner="defenders">
   <cuboid min="-20,15,-59" max="-18,23,-61"/>
  </destroyable>
 </destroyables>
<destroyables name="Front Monument" materials="redstone block" completion="100%" show-progress="true">
  <destroyable owner="defenders">
   <cuboid min="3,9,-16" max="5,13,-14"/>
  </destroyable>
</destroyables>
<time result="defenders">10m</time>
<kits>
  <kit name="spawn">
    <potion duration="5" amplifier="5">damage resistance</potion>
  </kit>
  <kit name="attackers" parents="spawn">
    <item slot="0" damage="-30000">stone sword</item>
    <item slot="1">bow</item>
    <item slot="2">iron pickaxe</item>
    <item slot="3">stone axe</item>
    <item amount="64" slot="4">log</item>
    <item damage="8229" slot="5">potion</item>
    <item damage="8229" slot="6">potion</item>
    <item slot="7">exp bottle</item>
    <item amount="64" slot="8">golden carrot</item>
    <item amount="32" slot="28">arrow</item>
    <boots color="7fcc19" damage="-30000">leather boots</boots>
    <leggings color="7fcc19" damage="-30000">leather leggings</leggings>
    <chestplate damage="-30000">chainmail chestplate</chestplate>
  </kit>
</kits>
<toolrepair>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>stone axe</tool>
    <tool>diamond boots</tool>
</toolrepair>
<itemremove>
  <item>cooked chicken</item>
  <item>wood</item>
  <item>log</item>
  <item>smooth brick</item>
  <item>step</item>
  <item>sapling</item>
  <item>apple</item>
  <item>fence</item>
  <item>redstone block</item>
  <item>trap door</item>
  <item>glowstone dust</item>
  <item>cobble wall</item>
  <item>potion</item>
  <item>string</item>
  <item>clay</item>
</itemremove>
<disabledamage>
    <damage ally="true" self="false" enemy="false" other="false">block explosion</damage>
</disabledamage>
<timelock>on</timelock>
<maxbuildheight>30</maxbuildheight>
<fitlters>
  <filter name="beacon-protections">
    <deny><block>beacon</block></deny>
  </filter>
  <filter name="deny-gold"> <!-- For the beacons -->
    <deny><block>gold block</block></deny>
  </filter>
  <filter name="beacon-tnt-protection">
    <not>
        <all>
            <any>
                <block>gold block</block>
                <block>beacon</block>
            </any>
            <any>
                <filter name="allow-world"/>
                <filter name="deny-all"/>
            </any>
        </all>
    </not>
  </filter>
  <filter name="deny-chests">
    <deny><block>chest</block></deny>
  </filter>
  <filter name="deny-signs">
    <deny><block>signs</block></deny>
  </filter>
  <filter name="only-gold" parents="deny-blocks">
    <allow><block>gold block</block></allow>
  </filter>
</fitlters>
<regions>
  <cuboid name="beacons" min="oo,31,oo" max="-oo,oo,-oo"/>
  <apply use="beacon-protections" message="You may not break/use the beacons. Get down from there!">
    <region name="beacons"/>
  </apply>
  <apply block-break="deny-gold" message="You may not break/use the beacons. Get down from there!">
	<region name="beacons"/>
  </apply>
</regions>
</map>
