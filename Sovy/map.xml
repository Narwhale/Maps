<?xml version="1.0"?>
<!-- Unconfirmed features = team sizes, map length -->
<map proto="1.3.3">
<name>Sovy</name>
<version>1.0.0</version>
<objective>
  Attackers have 15 minutes to destroy the 3 monuments. Defenders must hold them off to win!
</objective>
<authors>
  <author>Avaleer</author>
</authors>
<contributors>
  <contributor contribution="XML">TheZaner</contributor>
</contributors>
<teams>
  <team color="green" max="1">Attackers</team>
  <team color="dark red" max="1">Defenders</team>
</teams>
<destroyables name="Right Monument" materials="redstone block" completion="100%" show-progress="true">
  <destroyable owner="defenders">
   <cuboid min="-17,14,-58" max="-21,24,-62"/>
  </destroyable>
 </destroyables>
 <destroyables name="Left Monument" materials="redstone block" completion="100%" show-progress="true">
  <destroyable owner="defenders">
   <cuboid min="-17,14,32" max="-21,24,28"/>
  </destroyable>
</destroyables>
<destroyables name="Front Monument" materials="redstone block" completion="100%" show-progress="true">
  <destroyable owner="defenders">
   <cuboid min="2,8,-17" max="6,14,-13"/>
  </destroyable>
</destroyables>
<time result="defenders">15m</time>
<kits>
  <kit name="defenders">
    <potion duration="5" amplifier="5">damage resistance</potion>
    <item slot="17">arrow</item>
  </kit>
  <kit name="attackers" parents="defenders">
    <item slot="0" damage="-30000">stone sword</item>
    <item slot="1">bow</item>
    <item slot="2">iron pickaxe</item>
    <item slot="3">stone axe</item>
    <item amount="64" slot="4">log</item>
    <item damage="8229" slot="5">potion</item>
    <item damage="8229" slot="6">potion</item>
    <item slot="7">exp bottle</item>
    <item amount="64" slot="8">golden carrot</item>
    <item amount="32" slot="28">arrow</item>
    <boots color="7fcc19" damage="-30000">leather boots</boots>
    <leggings color="7fcc19" damage="-30000">leather leggings</leggings>
    <chestplate damage="-30000">chainmail chestplate</chestplate>
    <potion duration="oo" amplifier="2">slow digging</potion>
  </kit>
  <kit name="attacker-fatigue" force="true">
    <potion duration="1" amplfier="3">slow digging</potion>
  </kit>
</kits>
<toolrepair>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>stone axe</tool>
    <tool>diamond boots</tool>
	<tool>stone sword</tool>
</toolrepair>
<itemremove>
  <item>cooked chicken</item>
  <item>wood</item>
  <item>log</item>
  <item>smooth brick</item>
  <item>step</item>
  <item>sapling</item>
  <item>apple</item>
  <item>fence</item>
  <item>redstone block</item>
  <item>trap door</item>
  <item>glowstone dust</item>
  <item>cobble wall</item>
  <item>potion</item>
  <item>string</item>
  <item>clay</item>
  <item>leather boots</item>
  <item>leather leggings</item>
  <item>chainmail chestplate</item>
  <item>golden carrot</item>
</itemremove>
<disabledamage>
    <damage ally="true" self="false" enemy="false" other="false">block explosion</damage>
</disabledamage>
<timelock>on</timelock>
<maxbuildheight>30</maxbuildheight>
<filters>
  <filter name="beacon-protections">
    <deny><block>beacon</block></deny>
  </filter>
  <filter name="deny-gold">
    <deny><block>gold block</block></deny>
  </filter>
  <filter name="beacon-tnt-protection">
    <not>
        <all>
            <any>
                <block>gold block</block>
                <block>beacon</block>
            </any>
            <any>
                <filter name="allow-world"/>
                <filter name="deny-all"/>
            </any>
        </all>
    </not>
  </filter>
  <filter name="deny-chests">
    <deny><block>chest</block></deny>
  </filter>
  <filter name="deny-signs">
    <deny><block>wall sign</block></deny>
    <deny><block>sign post</block></deny>
  </filter>
  <filter name="only-gold" parents="deny-blocks">
    <allow><block>gold block</block></allow>
  </filter>
  <filter name="deny-enchanting-table">
    <deny><block>enchanting table</block></deny>
  </filter>
</filters>
<regions>
  <cuboid name="beacons" min="oo,31,oo" max="-oo,oo,-oo"/>
  <rectangle name="main" min="oo,oo" max="-oo,-oo"/>
  <rectangle name="defender-spawn" min="-45,2" max="-104,-32"/>
  <apply use="beacon-protections" world="beacon-tnt-protection" block-break="beacon-protections" message="You may not break/use the beacons. Get down from there!">
    <region name="beacons"/>
  </apply>
  <apply block-break="deny-gold" message="You may not break the gold blocks up here! Get down from there!">
	<region name="beacons"/>
  </apply>
  <apply block-break="deny-enchanting-table" message="You may not break the enchanting tables.">
  	<region name="main"/>
  </apply>
  <apply kit="attacker-fatigue">
  	<inverse><cylinder base="117,8,-15" radius="6" height="1"/></inverse>
  </apply>
  <apply world="deny-world">
  	<region name="defender-spawn"/>
  </apply>
  <apply block="only-gold" message="You may only destroy gold in spawn">
  	<region name="defender-spawn"/>
  </apply>
  <apply block="deny-chests" block="deny-signs" message="You may not destroy chests or signs.">
  	<region name="main"/>
  </apply>
  <apply block-place="deny-blocks" message="You may not build outside the map.">
  	<void/>
  </apply>
</regions>
<spawns>
    <spawn team="attackers" kit="attackers" yaw="90">
        <cylinder base="117,8,-15" radius="3" height="1"/> 
    </spawn>
    <spawn team="defenders" kit="defenders" yaw="-90">
        <cuboid min="-95,7,-17" max="-99,7,-13"/>
    </spawn>
    <default yaw="270">
        <cuboid min="-99,7,-17" max="-95,7,-13"/>
    </default>
</spawns>
</map>
