<?xml version="1.0"?>
<map proto="1.3.2">
<name>Blasternauts: Shockwave</name>
<version>1.0</version>
<objective>Use your grenades and TNT to blow up as many people as you can!</objective>
<rules>
	<rule>Fall damage is disabled!</rule>
</rules>
<authors>
	<author>TheZaner</author>
</authors>
<contributors>
	<contributor contribution="Building Assistance">ItsMiiOlly</contributor>
</contributors>
<teams>
    <team color="blue" max="10" max-overfill="12">Team Blue</team>
    <team color="red" max="10" max-overfill="12">Team Red</team>
</teams>
<score>
	<time>8m</time>
</score>
<classes family="ghost" sticky="true">
    <class name="Blasternaut" default="true" description="The default kit!" longdescription="The default kit!" icon="tnt" restrict="false" sticky="false">
        <permission>grenades.use</permission>
        <permission>doublejump.use</permission>
        <kit name="portal">
            <item slot="0" name="`cTNT Launcher">bow</item>
            <item slot="1" amount="4">tnt</item>
            <item slot="2" name="`6`lGrenade" amount="32">fireball</item>
            <item slot="8" damage="8229">potion</item>
            <item slot="28" amount="6">arrow</item>
            <boots>iron boots</boots>
            <potion duration="8" amplifier="25" ambient="true">heal</potion>
            <potion duration="8" amplifier="5" ambient="true">damage resistance</potion>
            <potion duration="oo" amplifier="2" ambient="true">speed</potion>
            <potion duration="oo" amplifier="1" ambient="true">jump</potion>
			<potion duration="oo" amplifier="1" ambient="true">night vision</potion>
        </kit>
    </class>
</classes>
<kits>
    <kit name="red" parents="portalr">
        <chestplate name="`4`lBlast Shell" enchantment="protection explosions:2" color="ff0000">leather chestplate</chestplate>
    </kit>
    <kit name="blue" parents="portalb">
        <chestplate name="`4`lBlast Shell" enchantment="protection explosions:2" color="0000ff">leather chestplate</chestplate>
    </kit>
</kits>
<toolrepair>
    <tool>leather chestplate</tool>
    <tool>iron boots</tool>
	<tool>bow</tool>
	<tool>potion</tool>
</toolrepair>
<itemremove>
	<item>blaze rod</item>
</itemremove>
<itemkeep>
    <item>stone sword</item>
	<item>iron chestplate</item>
	<item>monster egg</item>
</itemkeep>
<killreward>
    <item amount="2">arrow</item>
</killreward>
<disabledamage>
    <damage>fall</damage>
</disabledamage>
<modifybowprojectile>
    <projectile>TNTPrimed</projectile>
    <velocityMod>1.0</velocityMod>
</modifybowprojectile>
<tnt>
    <instantignite>on</instantignite>
    <blockdamage>off</blockdamage>
</tnt>
<mobs>
    <filter>
        <allow>
            <mob>creeper</mob>
            <spawn>spawner egg</spawn>
        </allow>
    </filter>
</mobs>
<timelock>on</timelock>
<hunger>
    <depletion>off</depletion>
</hunger>
<regions>
	<rectangle name="main" min="oo,oo" max="-oo,-oo"/>
	<cylinder name="redspawn" base="0,15,-42" radius="3" height="5"/>
	<cylinder name="bluespawn" base="0,15,43" radius="3" height="5"/>
	<cuboid name="redkit" min="-0,12,43" max="1,12,41"/>
	<cuboid name="bluekit" min="-0,12,-43" max="1,12,-41"/>
	
	<apply block="only-tnt" message="You can only use TNT!">
		<region name="main"/>
	</apply>
	<apply block="deny-world">
		<region name="main"/>
	</apply>
	<apply block="only-red" message="You may not enter the enemies base!">
		<region name="redspawn"/>
	</apply>
	<apply block="only-blue" message="You may not enter the enemies base!">
		<region name="bluespawn"/>
	</apply>
	<apply kit="portal">
		<region name="bluekit"/>
		<region name="redkit"/>
	</apply>
	<apply kit="portalb">
		<region name="bluekit"/>
	</apply>
	<apply kit="portalr">
		<region name="redkit"/>
	</apply>
	<apply velocity="@0.0,3.0,0.0">
        <cuboid min="-34.0,14.0,17.0" max="-34.0,16.0,17.0"/>
    </apply>
	<apply velocity="@0.0,3.0,0.0">
		<cuboid min="33.0,14.0,17.0" max="33.0,16.0,17.0"/>
    </apply>
	<apply velocity="@0.0,3.0,0.0">
		<cuboid min="-34.0,14.0,-17.0" max="-34.0,16.0,-17.0"/>
    </apply>
	<apply velocity="@0.0,3.0,0.0">
		<cuboid min="33.0,14.0,-17.0" max="33.0,16.0,-17.0"/>
    </apply>
</regions>
<spawns>
	<spawn team="blue" yaw="180">
		<cuboid min="-1.0,8.0,42.0" max="1.0,8.0,44.0"/>
	</spawn>
	<spawn team="red" yaw="0">
		<cuboid min="-1.0,8.0,-44.0" max="1.0,8.0,-42.0"/>
	</spawn>
	<default yaw="90">
		<cuboid min="-64,24,1" max="-62,24,0"/>
	</default>
</spawns>
<portals>
	<portal y="3" yaw="@0">
		<region name="bluekit"/>
	</portal>
	<portal y="3" yaw="@180">
		<region name="redkit"/>
	</portal>
</portals>
<proximity-alarms>
    <proximity-alarm flare-radius="2">
        <region>
            <cuboid min="oo,oo" max="-oo,-oo"/>
        </region>
        <detect>
            <team>red</team>
        </detect>
    </proximity-alarm>
	<proximity-alarm flare-radius="2">
        <region>
            <cuboid min="oo,oo" max="-oo,-oo"/>
        </region>
        <detect>
            <team>blue</team>
        </detect>
    </proximity-alarm>
</proximity-alarms>
</map>
