<?xml version="1.0"?>
<map proto="1.3.1">
<name>OCGP: Rage Valley</name>
<version>1.0.1</version>
<objective>Diamond Cup: Be the first car to finish 3 laps.</objective>
<include src="../race.xml"/>
<authors>
    <author>TheZaner</author>
</authors>
<rules>
	<rule>Accessing the mountains gains no advantage, do not attempt to go in them.</rule>
    <rule>Fall damage is disabled!</rule>
</rules>
<score>
    <limit>3</limit>
    <box value="1">
        <cuboid min="39,4,47" max="51,6,59"/>
    </box>
</score>
<timelock>on</timelock>
<regions>
	<cylinder name="observers" base="0,49,-1" radius="2" height="0"/>
	<cuboid name="spawn" min="120,29,-4" max="116,29,6"/>
</regions>
<spawns>
    <spawn team="blue" kit="blue" yaw="90"><region name="spawn"/></spawn>
    <spawn team="red" kit="red" yaw="90"><region name="spawn"/></spawn>
    <spawn team="green" kit="green" yaw="90"><region name="spawn"/></spawn>
    <spawn team="yellow" kit="yellow" yaw="90"><region name="spawn"/></spawn>
    <spawn team="purple" kit="purple" yaw="90"><region name="spawn"/></spawn>
    <spawn team="pink" kit="pink" yaw="90"><region name="spawn"/></spawn>
    <spawn team="orange" kit="orange" yaw="90"><region name="spawn"/></spawn>
    <spawn team="lime" kit="lime" yaw="90"><region name="spawn"/></spawn>
    <spawn team="cyan" kit="cyan" yaw="90"><region name="spawn"/></spawn>
    <spawn team="gray" kit="gray" yaw="90"><region name="spawn"/></spawn>
    <spawn team="navy" kit="navy" yaw="90"><region name="spawn"/></spawn>
    <spawn team="black" kit="black" yaw="90"><region name="spawn"/></spawn>
    <default yaw="-90"><region name="observers"/></default>
</spawns>
<portals>
    <portal x="@-62" y="@20" z="@-40" yaw="@0">
        <cuboid min="-43,20,-81" max="-33,24,-84"/>
    </portal>
    <portal x="@115" y="@29" z="@1" yaw="@90">
        <cuboid min="39,4,47" max="51,6,59"/>
    </portal>
	<portal x="@119" y="@29" z="@1" yaw="@90">
	    <cuboid min="oo,1,oo" max="-oo,3,-oo"/>
	</portal>
</portals>
<gamerules>
    <doFireTick>false</doFireTick>
</gamerules>
<disabledamage>
    <damage>fire tick</damage>
</disabledamage>
</map>
