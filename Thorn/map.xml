<?xml version="1.0"?>
<map proto="1.3.5">
<name>Thorns</name>
<version>1.0.1</version>
<objective>To win leak the enemy team's core.</objective>
<authors>
    <author>rockymine</author>
</authors>
<teams>
    <team color="dark red" max="16" max-overfill="18">Red Team</team>
    <team color="blue" max="16" max-overfill="18">Blue Team</team>
</teams>
<kits>
    <kit name="spawn">
        <item slot="0">stone sword</item>
        <item slot="1">bow</item>
        <item slot="28" amount="32">arrow</item>
        <item slot="4" amount="16">wood</item>
        <item slot="5" amount="8">leaves 2</item>
        <item slot="6" amount="16">cooked chicken</item>
        <item slot="7" enchantment="durability:1">shears</item>
        <leggings>gold leggings</leggings>
        <potion duration="5" amplifier="25">heal</potion>
        <potion duration="5" amplifier="25">damage resistance</potion>
    </kit>
    <kit name="red" parents="spawn">
        <helmet color="ff0000" damage="-3000">leather helmet</helmet>
        <chestplate color="ff0000" damage="-3000">leather chestplate</chestplate>
        <boots color="ff0000" damage="-3000">leather boots</boots>
    </kit>
    <kit name="blue" parents="spawn">
        <helmet color="0000ff" damage="-3000">leather helmet</helmet>
        <chestplate color="0000ff" damage="-3000">leather chestplate</chestplate>
        <boots color="0000ff" damage="-3000">leather boots</boots>
    </kit>
</kits>
<spawns>
    <spawn team="red" kit="red" yaw="90">
        <cylinder base="207,15,-380" radius="1" height="0" />
    </spawn>
    <spawn team="blue" kit="blue" yaw="-90">
        <cylinder base="143,15,-488" radius="1" height="0" />
    </spawn>
    <default yaw="0">
        <block>175.5,34,-434.5</block>
    </default>
</spawns>
<filters>
    <filter name="only-red">
        <team>red</team>
    </filter>
    <filter name="only-blue">
        <team>blue</team>
    </filter>
</filters>
<regions>
    <union name="spawns">
        <rectangle name="red-spawn" min="201.5,-373.5" max="210.5,-386.5" />
        <rectangle name="blue-spawn" min="149.5,-497.5" max="140.5,-484.5" />
    </union>
    <apply enter="only-red" message="You may not enter the enemies base!">
        <region name="red-spawn"/>
    </apply>
    <apply enter="only-blue" message="You may not enter the enemies base!">
        <region name="blue-spawn"/>
    </apply>
    <apply block="deny-all" message="You may not edit the team spawns!">
		<region name="spawns"/>
    </apply>
    <apply block="deny-all" message="You may not build outside of the map">
        <negative>
            <cuboid min="140,0,-521" max="210,25,-349"/>
        </negative>
    </apply>
</regions>
<renewables>
    <renewable rate="0.5" grow="true" particles="true" sound="true" avoid-entities="true">
    <region>
        <cylinder base="107,9,-435" radius="3" height="3"/>
    </region>    
        <renew>emerald ore</renew>
    </renewable>    
</renewables>
<modes>
    <mode after="30m" material="gold block" name="`eGOLD MODE"/>
    <mode after="45m" material="glass" name="`eGLASS MODE"/>
</modes>
<cores mode-changes="true" material="obsidian">
    <core team="red">
        <cuboid min="156,15,-395" max="152,19,-391"/>
    </core>
    <core team="blue">
        <cuboid min="194,15,-475" max="198,19,-479"/>
    </core>
</cores>
<killreward>
    <item>emerald</item>
    <item amount="4">arrow</item>
</killreward>
<itemremove>
    <item>dirt</item>
    <item>seeds</item>
    <item>gravel</item>
    <item>flint</item>
    <item>iron barding</item>
    <item>emerald</item>
    <item>cooked chicken</item>
    <item>shears</item>
    <item>arrow</item>
    <item>leather chestplate</item>
    <item>leather helmet</item>
    <item>leather boots</item>
    <item>iron sword</item>
    <item>iron axe</item>
    <item>obsidian</item>
</itemremove>
<itemkeep>
    <item>emerald</item>
    <item>quartz</item>
    <item>iron ingot</item>
    <item>iron pickaxe</item>
    <item>diamond pickaxe</item>
</itemkeep>
<armorkeep>
    <item>golden boots</item>
    <item>chain helmet</item>
    <item>chain leggings</item>
    <item>iron helmet</item>
    <item>iron chestplate</item>
    <item>iron leggings</item>
    <item>iron boots</item>    
</armorkeep>
<maxbuildheight>25</maxbuildheight>
<timelock>on</timelock>
</map>
